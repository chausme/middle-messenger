{
    "name": "middle-messenger",
    "version": "0.99.0-alpha.0",
    "description": "Messenger app based on existing API",
    "source": "static/index.html",
    "scripts": {
        "dev": "npx webpack serve",
        "build": "node ./node_modules/.bin/webpack",
        "start": "npm run build && node server.js",
        "serve": "node server.js",
        "tswatch": "tsc --watch",
        "lint:scripts": "npx eslint src/ --ext .js --quiet --ext .ts --quiet",
        "lint:styles": "npx stylelint \"src/**/*.css\" \"!src/reset.css\"",
        "lint": "npm-run-all lint:scripts lint:styles",
        "test": "jest",
        "precommit": "npm-run-all test lint",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/chausme/middle-messenger.git"
    },
    "author": "chausme",
    "type": "module",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "29.4.0",
        "@types/node": "18.13.0",
        "@types/uuid": "9.0.0",
        "@typescript-eslint/eslint-plugin": "5.48.1",
        "@typescript-eslint/parser": "5.48.1",
        "clean-webpack-plugin": "4.0.0",
        "css-loader": "6.7.3",
        "dotenv": "16.0.3",
        "eslint": "8.30.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-import": "2.26.0",
        "handlebars-loader": "1.7.3",
        "html-webpack-plugin": "5.5.0",
        "husky": "8.0.3",
        "jest": "29.4.3",
        "jest-environment-jsdom": "29.4.3",
        "jsdom": "21.1.0",
        "mini-css-extract-plugin": "2.7.2",
        "npm-run-all": "4.1.5",
        "postcss": "8.4.20",
        "postcss-import": "15.1.0",
        "postcss-loader": "7.0.2",
        "postcss-nested": "6.0.0",
        "postcss-simple-vars": "7.0.1",
        "prettier": "2.8.1",
        "stylelint": "14.16.1",
        "stylelint-config-prettier": "9.0.4",
        "stylelint-config-standard": "29.0.0",
        "ts-jest": "29.0.5",
        "ts-loader": "9.4.2",
        "typescript": "4.9.4",
        "webpack": "5.75.0",
        "webpack-cli": "5.0.1",
