{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2019",
        "module": "commonjs",
        "declaration": false,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "paths": {
            "~*": ["./*"],
            "@*": ["./src/*"]
        }
    }
}
